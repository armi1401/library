<% if !flash[:notice].blank? %>
  <%= flash[:notice] %>
  <br />
<%  end %>

<% @books.each do |book| %>
<tr>
  <td><%= book.id %></td>
  <td><%= link_to book.title, book_path(book) %></td>
  <td><%= link_to "Edit Book", edit_book_path(book) %></td>
  <td><%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
  <br />
</tr>
<% end %>

<br />
<td><%= link_to "New Book", new_book_path %></td>
