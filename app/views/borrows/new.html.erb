<%= form_with model: @borrow, local: true do |form| %>

<p>
  <%= form.label :book_id %><br>
  <%= form.text_field :book_id %>
</p>
<p>
  <%= form.label :user_id %><br>
  <%= form.text_field :user_id %>
</p>
<p>
  <%= form.label :borrow_from %><br>
  <%= form.date_field :borrow_from %>
</p>
<p>
  <%= form.label :borrow_to %><br>
  <%= form.date_field :borrow_to %>
</p>
<p>
  <%= form.submit %>
</p>
<% end %>

<%= link_to 'Back', borrows_path %>